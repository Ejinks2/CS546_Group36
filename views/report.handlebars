<main>
  <div class="report-card">
    <h2>Submit a Crime Report</h2>
    {{!-- {{#if error}}
      <div class="report-error">{{error}}</div>
    {{/if}} --}}
    <ul id="errors" class="report-error" hidden></ul>
    {{#if success}}
      <div class="report-success">Report submitted successfully!</div>
    {{/if}}
    <form method="POST" action="/report" class="report-form" id="report">
      <div class="form-group">
        <label for="offense">Offense</label>
        <select id="offense" name="offense" required>
          <option value="">Select offense</option>
          <option value="ROBBERY">ROBBERY</option>
          <option value="BURGLARY">BURGLARY</option>
          <option value="RAPE">RAPE</option>
          <option value="DANGEROUS DRUGS">DANGEROUS DRUGS</option>
          <option value="LARCENY">LARCENY</option>
          <option value="FORGERY">FORGERY</option>
          <option value="ASSAULT">ASSAULT</option>
          <option value="GAMBLING">GAMBLING</option>
          <option value="DANGEROUS WEAPONS">DANGEROUS WEAPONS</option>
          <option value="KIDNAPPING">KIDNAPPING</option>
          <option value="HARRASSMENT">HARRASSMENT</option>
          <option value="POSSESSION OF STOLEN GOODS">POSSESSION OF STOLEN GOODS</option>
        </select>
      </div>
      <div class="form-group">
        <label for="borough">Borough</label>
        <select id="borough" name="borough" required>
          <option value="">Select borough</option>
          <option value="Manhattan">Manhattan</option>
          <option value="Brooklyn">Brooklyn</option>
          <option value="Queens">Queens</option>
          <option value="The Bronx">The Bronx</option>
          <option value="Staten Island">Staten Island</option>
        </select>
      </div>
      <div class="form-group">
        <label for="date">Time of Incident</label>
        <input type="datetime-local" id="date" name="date" required>
      </div>
      <div class="form-group">
        <label for="location">Location of Incident</label>
        <input type="text" id="location" name="location" placeholder="e.g. 123 Main St" required>
      </div>
      <div class="form-group">
        <label for="description">Description of Incident</label>
        <textarea id="description" name="description" rows="3" placeholder="Describe what happened..." required></textarea>
      </div>
      <button type="submit" class="report-submit-btn">Submit Report</button>
    </form>
  </div>
</main>
<script src="/js/report.js"></script>